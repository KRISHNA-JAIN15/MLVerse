{
  "testEnvironment": "node",
  "extensionsToTreatAsEsm": [".js"],
  "globals": {
    "ts-jest": {
      "useESM": true
    }
  },
  "moduleNameMapping": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transform": {},
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "handler.js",
    "!**/node_modules/**",
    "!**/tests/**"
  ],
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
}
